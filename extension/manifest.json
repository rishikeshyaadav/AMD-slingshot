{
  "manifest_version": 3,
  "name": "AMD Deepfake Sentry",
  "version": "1.0",
  "description": "Real-time AI Deepfake Detection powered by AMD Ryzen AI.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AMD Deepfake Sentry"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["http://127.0.0.1:5000/*", "<all_urls>"]
}
